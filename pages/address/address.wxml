<!--pages/address/address.wxml-->
<view>
 <view class="one">
  <view>收货人姓名:</view>
  <view>{{addressInfo.userName}}</view>
 </view >
  <view class="one">
  <view>邮编:</view>
  <view>{{addressInfo.postalCode}}</view>
 </view>
  <view class="one"> 
  <view>地区:</view>
  <view>{{addressInfo.provinceName}} {{addressInfo.cityName}} {{addressInfo.countyName}}</view>
 </view>
  <view class="one">
  <view>收货地址:</view>
  <view>{{addressInfo.detailInfo}}</view>
 </view>
  <view class="one">
  <view>国家码:</view>
  <view>{{addressInfo.nationalCode}}</view>
 </view>
  <view class="one">
  <view>手机号码:</view>
  <view>{{addressInfo.telNumber}}</view>
 </view>
</view>
<view bindtap="chooseAddress" class="addAddress">
  <image src="../img/add.png" mode="widthFix"></image>
  <text class="text">获取收货地址</text>
  <image src="../img/right.png" class="right" mode="widthFix"></image>
</view>