<!--pages/modify/modify.wxml-->
<form bindsubmit="formsubmit">
<view class="nameIpt">
  <label>姓名：</label>
  <input type="text" name="username" value="{{username}}" placeholder="请输入姓名"></input>
</view>

<view class="nameIpt">
  <label>性别：</label>
  <radio-group name="gender">
    <label>  <radio value="男" checked="{{gender==='男' ?'checked' :''}}">男</radio>
</label>
<label><radio value="女" checked="{{gender==='女' ?'checked' :''}}">女</radio></label>
  </radio-group>
</view>
 <button form-type="submit" type="primary">保存</button>
</form>