/* pages/Person/person.wxss */
.header{
  /* 水平垂直居中 */
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  background-color: #CC0000;
}
.header >image{
  border: 10rpx solid rgba(0,0, 0, 0.1);
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.icon-list {
  display: flex;
  justify-content: space-around;
  font-size: 35rpx;
  font-weight: bold;
}
.icon-list > view >image{
  padding: 30rpx;
  width: 80rpx;
  height: 80rpx;
}
.menu{
  margin-top: 100rpx;
}
.menu view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 50rpx;
  padding: 30rpx;
  background-color: ghostwhite;
  margin-bottom: 20rpx;
}
.menu >view >image{
  padding: 20rpx;
  width: 60rpx;
  height: 60rpx;

}
